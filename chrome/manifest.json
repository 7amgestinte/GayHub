{
    "name": "GayHub",
    "version": "0.1.0",
    "manifest_version": 2,
    "description": "GayHub is useful",
    "icons": {
        "16": "images/icon-16.png",
        "128": "images/icon-128.png"
    },
    "homepage_url": "http://github.com/jawil",
    "permissions": [
        "tabs",
        "*://github.com/*"
    ],
    "background": {
        "scripts": [
            "scripts/background.js"
        ]
    },
    "web_accessible_resources": ["icons/*.png", "vs/**/*.*"],

    "browser_action": {
        "default_icon": "images/icon-16.png",
        "default_popup": "popup.html"
    },

    "content_scripts": [{
        "matches": [
            "*://github.com/*",
            "*://gist.github.com/*"
        ],
        "css": [
            "styles/overView.css",
            "styles/sidebarNav.css",
            "styles/loading.css",
            "styles/tableOfContent.css",
            "styles/showAvatar.css",
            "styles/copySnippet.css",
            "styles/zoom.css"
        ],
        "js": [
            "scripts/contentscript.js",
            "vs/loader.js",
            "scripts/vscode.js"
        ],
        "run_at": "document_end",
        "all_frames": false
    }]
}